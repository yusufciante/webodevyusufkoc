@using hospital.Utility;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/hospital.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">hospital</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    <div class="dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"> Localization </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="dropdown-item">
                                    <i class="flag-icon flag-icon-gb"></i> english
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="dropdown-item">
                                    <i class="flag-icon flag-icon-gb"></i> TÜRKÇE
                                </a>
                            </li>
                        </ul>
                    </div>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole(UserRoles.Role_Admin))
                        {
                            
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="DoktorBrans" asp-action="Index">Doktor Branşı</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Doktor" asp-action="Index">Doktor</a>
                        </li>
                        
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Randevu" asp-action="Index">Randevu Al</a>
                        </li>



                        @if (User.IsInRole(UserRoles.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="DoktorBrans" asp-action="Index">@_localization.Getkey("Branşlar").Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doktor" asp-action="Index">@_localization.Getkey("Doktorlar").Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Randevu" asp-action="Index">@_localization.Getkey("Randevu İşlemleri").Value</a>
                            </li>
                        }

                        @if (User.IsInRole(UserRoles.Role_Hasta))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doktor" asp-action="Index">@_localization.Getkey("Doktor Listesi").Value</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial"/> 
                
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
